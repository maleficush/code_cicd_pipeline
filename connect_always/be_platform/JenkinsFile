pipeline {
    agent any
    environment {
        git_repo = ""
    }

    stages() {
        stage('init') {
            steps() {
                echo 'init'

                script {
                    switch(env.PROFILE) {
                        case 'ch-stg':
                            git_repo = 'https://github.com/codeclick-company/codeclick_connectalways_be.git'
                            break
                        case 'ca-dev':
                            git_repo = 'def'
                            break
                        default:
                            error('Unexpected branch name')
                    }
                }

                echo git_repo
            }
        }

        stage('git clone') {
            steps() {
                git git_repo
            }
        }

        stage('Test') {
            steps {
                echo 'Testing..'
                echo env.PROFILE

            }
        }

        stage('execute sh') {
            steps {
                sh "chmod 774 ./project.sh"
                sh "./project.sh"
            }
        }
    }
}