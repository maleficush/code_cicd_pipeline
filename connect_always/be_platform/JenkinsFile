pipeline {
    agent any
    environment {
        git_repo = ""
    }

    stages() {
        stage('init') {
            steps() {
                echo 'init'

                script {
                    switch(env.PROFILE) {
                        case 'ch-stg':
                            git_repo = 'https://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@github.com/codeclick-company/codeclick_connectalways_be.git'
                            break
                        case 'ca-dev':
                            git_repo = 'https://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@github.com/codeclick-company/codeclick_connectalways_be.git'
                            break
                        default:
                            error('Unexpected branch name')
                    }
                }

                echo git_repo
            }
        }

        stage('Source clone') {
            steps() {
                echo 'Source clone'
                script {
                    git clone git_repo
                }
            }
        }

        stage('Configure App profile config') {
            steps {
                echo 'Testing..'
                echo pwd

                echo ls -al

            }
        }

        stage('execute sh') {
            steps {
                sh "chmod 774 ./project.sh"
                sh "./project.sh"
            }
        }
    }
}